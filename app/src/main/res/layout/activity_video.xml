<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <RelativeLayout
        android:id="@+id/table_controls"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">

            <EditText
                android:id="@+id/query_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:hint="@string/query"
                android:inputType="textNoSuggestions" />
            <SearchView
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search"
            android:columnCount="3">
            <GridLayout
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:layout_below="@id/search"
                android:columnCount="1"
                android:background="#E8EAF6"
                android:elevation="10dp">
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/v2"
                    android:layout_gravity="center"></ImageButton>
                <TextView
                    android:text="vi_20201201023154"
                    android:layout_gravity="center"></TextView>
            </GridLayout>

            <GridLayout
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:layout_below="@id/search"
                android:columnCount="1"
                android:background="#E8EAF6"
                android:elevation="10dp"
                android:layout_marginLeft="5dp">
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/v1"
                    android:layout_gravity="center"></ImageButton>
                <TextView
                    android:text="vi_20201201023226"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"></TextView>
            </GridLayout>

            <GridLayout
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:layout_below="@id/search"
                android:columnCount="1"
                android:background="#E8EAF6"
                android:elevation="10dp"
                android:layout_marginLeft="5dp">
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/v1"
                    android:layout_gravity="center"></ImageButton>
                <TextView
                    android:text="vi_20201201023564"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"></TextView>
            </GridLayout>

            <GridLayout
                android:layout_width="250dp"
                android:layout_height="240dp"
                android:layout_below="@id/search"
                android:columnCount="1"
                android:background="#E8EAF6"
                android:elevation="10dp"
                android:layout_marginTop="5dp">
                <ImageButton
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/v3"
                    android:layout_gravity="center"></ImageButton>
                <TextView
                    android:text="vi_20201201023432"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"></TextView>
            </GridLayout>
        </GridLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>