<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/action_operation_name"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:textSize="20dp"
        android:ellipsize="marquee"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#000000"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:columnCount="6">

            <TextView
                android:id="@+id/operation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="6"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16dp"
                tools:ignore="MissingConstraints"
                tools:text="title" />

            <TextView
                android:id="@+id/operation_id"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/operation_ele"
                android:layout_width="128dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/operation_obj"
                android:layout_width="128dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/operation_type"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textSize="16dp" />

            <Button
                android:id="@+id/operation_degree"
                android:layout_width="140dp"
                android:layout_height="24dp"
                android:layout_marginRight="30dp"
                android:background="#714cfe"
                android:text="0"
                android:textColor="#FFFFFF"></Button>

            <TextView
                android:id="@+id/operation_mark"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:gravity="center" />
        </GridLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>





