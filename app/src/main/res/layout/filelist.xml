<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPaddingBottom="10dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/file_title"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"
                tools:text="title" />
            <!--  android:layout_gravity="center"  让整个容器居中  -->

            <ImageView
                android:id="@+id/file_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/pdf"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"></ImageView>

            <TextView
                android:id="@+id/file_description"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="description"
                android:textSize="16sp"/>
            <Button
                android:id="@+id/file_open"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="查看文件"></Button>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>