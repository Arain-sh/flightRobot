<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment">

    <RelativeLayout
        android:id="@+id/loginLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="27dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/ic_login"></ImageView>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginLeft="520dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/huanying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="您好，请登录."
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp">
            </TextView>
            <ImageView
                android:id="@+id/userlogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/login_user"
                android:layout_toLeftOf="@+id/userinput"
                android:layout_below="@+id/huanying"></ImageView>

            <EditText
                android:id="@+id/userinput"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/huanying"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:inputType="textPersonName"
                android:hint="请输入用户名">
            </EditText>
            <ImageView
                android:id="@+id/pwdlogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/login_pwd"
                android:layout_toLeftOf="@+id/pwdinput"
                android:layout_below="@+id/userlogo"></ImageView>

            <EditText
                android:id="@+id/pwdinput"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/userinput"
                android:inputType="textPassword"
                android:hint="请输入密码">
            </EditText>
            <Button
                android:id="@+id/loginbutton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/pwdinput"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:background="#004684"
                android:text="登录"
                android:textColor="#FFFFFF"></Button>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>